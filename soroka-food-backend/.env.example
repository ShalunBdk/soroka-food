# Database
# Format: postgresql://username:password@host:port/database
# IMPORTANT: URL-encode special characters in password (# -> %23, @ -> %40, & -> %26)
DATABASE_URL="postgresql://postgres:your_password@localhost:5432/soroka-food"

# Server
PORT=3000
NODE_ENV=development

# JWT Authentication
# IMPORTANT: Generate strong secret using: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-CHANGE-THIS-IN-PRODUCTION
JWT_EXPIRES_IN=7d

# File Upload Settings
MAX_FILE_SIZE=5242880
UPLOAD_PATH=public/uploads

# CORS - Allowed Origins (comma-separated)
# Development: include both dev server and production server
# Production: replace with your actual domain(s)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000
# Example for production:
# ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Email Configuration
# Email encryption key for storing SMTP passwords (generate using: node -e "console.log(require('crypto').randomBytes(32).toString('hex').substring(0, 32))")
EMAIL_ENCRYPTION_KEY=your-32-character-encryption-key

# Frontend and Backend URLs (used in email templates)
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:3000

# SMTP settings are configured via admin panel (SUPER_ADMIN only)
# Default values in database:
# - Host: smtp.gmail.com
# - Port: 587
# - Secure: false
# - From Email: noreply@sorokafood.com
# - From Name: Soroka Food

# Redis (Optional - for caching)
# REDIS_URL=redis://localhost:6379

# Logging
# LOG_LEVEL=info

# Monitoring (Optional)
# SENTRY_DSN=your-sentry-dsn-here
